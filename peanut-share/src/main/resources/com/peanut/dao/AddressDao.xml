<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peanut.dao.AddressDao">
    <select id="seabi" parameterType="Integer" resultMap="addressUser">
        select * from address where uid=#{uid}
    </select>

    <delete id="deladd" parameterType="Integer">
        DELETE FROM address WHERE aid=#{aid}
    </delete>

    <resultMap id="addressUser" type="Address">
        <id property="aid" column="aid"></id>
        <association property="user" column="uid" javaType="User">
            <id column="uid" property="uid"></id>
        </association>
    </resultMap>
</mapper>