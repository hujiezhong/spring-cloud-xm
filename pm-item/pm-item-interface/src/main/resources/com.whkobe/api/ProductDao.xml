<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whkobe.api.ProductDao">

    <cache type="org.mybatis.caches.ehcache.EhcacheCache">
        <property name="timeToIdleSeconds" value="20"></property><!--<!–当缓存闲置60秒后销毁–>-->
        <property name="timeToLiveSeconds" value="120"></property><!--<!–缓存存在160秒后销毁–>-->
        <property name="maxEntriesLocalHeap" value="1000"></property>
        <property name="maxEntriesLocalDisk" value="10000000"></property>
        <property name="memoryStoreEvictionPolicy" value="LRU"></property>
    </cache>

    <select id="getAll" parameterType="Product" resultMap="fan">
        SELECT p.*,c.`cocontent`,u.`username`,u.`touxiangpath` FROM product p INNER JOIN COMMENT c ON p.`pid`=c.`pid` INNER JOIN USER u ON u.`uid`=c.`uid` WHERE cid=7  GROUP BY c.`pid` ORDER BY COUNT(c.`pid`) DESC
    </select>
    <resultMap id="fan" type="Product">
        <id column="pid" property="pid"></id>
        <association property="comment" column="coid" javaType="Comment">
            <id column="pid" property="pid"></id>
        </association>
        <association property="user" column="uid" javaType="User">
            <id column="uid" property="uid"></id>
        </association>
    </resultMap>

</mapper>